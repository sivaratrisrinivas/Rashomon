{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "nixpacks"
    },
    "deploy": {
        "numReplicas": 1,
        "sleepApplication": false,
        "restartPolicyType": "on_failure"
    },
    "services": [
        {
            "name": "backend",
            "source": "api",
            "build": {
                "builder": "nixpacks"
            },
            "deploy": {
                "startCommand": "bun run start:prod",
                "healthcheckPath": "/health",
                "healthcheckTimeout": 300,
                "restartPolicyType": "on_failure"
            }
        },
        {
            "name": "frontend", 
            "source": "app",
            "build": {
                "builder": "nixpacks"
            },
            "deploy": {
                "startCommand": "bun run start:prod",
                "healthcheckPath": "/api/health",
                "healthcheckTimeout": 300,
                "restartPolicyType": "on_failure"
            }
        }
    ]
}